#:kivy 1.9.0

<CEToolBoxButton@Button>:
    font_size: '15sp'
    height: '18sp'

<CalculateButton@CEToolBoxButton>:
    text: "Calculate"
    on_release: root.on_release 

<MenuButton@CEToolBoxButton>:
    text: 'Menu'
    on_press: root.on_press

<CEToolBoxLabel@Label>:
    font_size: '15sp'
    height: '30sp'
    width: '110sp'
    #size_hint_y: None

<CEToolBoxTextInput@TextInput>:
    font_size: '15sp'
    height: '30sp'
    width: '60sp'
    #size_hint_y: None

<SpinnerUnit@Spinner>:
    text: "Unit1"
    font_size: '15sp'
    height: '30sp'
    width: '30sp'
    values: ["Unit1", "Unit2", "Unit3"]


<TopScreenLayout>:
    size_hint_y: None
    size_hint_x: None
    minimum_height: '350sp'
    minimum_width: '350sp'
    cols: 3
    padding: 10
    spacing: 10

<DownMenuLayout@GridLayout>:
    size_hint_y: None
    size_hint_x: None
    height: '30sp'
    width: '350sp'
    id: gl
    cols: 3 
    padding: 10
    spacing: 10

<ScrollViewTop@ScrollView>:
    size_hint_y: 1.
    size_hint_x: 1.

<ViscosityPopup>:
    id: popup
    title: "Calculate"
    size_hint: .6, .6

    Button:
        id: btnpop
        text: 'Viscosity : + result'
        on_press: popup.dismiss()
    
<ConductivityPopup>:
    id: popup
    title: "Calculate"
    size_hint: .6, .6
    
    Button:
        id: btnpop
        text: 'Conductivity : + result'
        on_press: popup.dismiss()
        
<FlowPopup>:
    id: popup
    title: "Calculate"
    size_hint: .6, .6
    
    Button:
        id: btnpop
        text: 'Flow : + result'
        on_press: popup.dismiss()

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Button:
            text: 'Injection'
            on_press: root.manager.current = 'injection'

        Button:
            text: 'Viscosity'
            on_press: root.manager.current = 'viscosity'

        Button:
            text: 'Conductivity'
            on_press: root.manager.current = 'conductivity'

        Button:
            text: 'Flow'
            on_press: root.manager.current = 'flow'

        Button:
            text: 'About'
            on_press: root.manager.current = 'about'


<InjectionScreen>:
    fullscreen: True
    
    BoxLayout:
        orientation: 'vertical'
        
        ScrollViewSpe:
            size_hint_y: 0.85
            height: self.change_child_height(self.height)
            width: self.change_child_width(self.width)
            
            TopScreenLayout:
                
                CEToolBoxLabel:
                    text: "Capillary Length :"

                CEToolBoxTextInput:        
                    id: Capillary
                
                SpinnerUnit:

                CEToolBoxLabel:
                    text: "Length to window :"
                
                CEToolBoxTextInput:
                    id: Towindow
                
                SpinnerUnit:
                
                CEToolBoxLabel:
                    text: "Inside diameter :"
            
                CEToolBoxTextInput:
                    id: Idiameter
                
                SpinnerUnit:
            
                CEToolBoxLabel:
                    text: "Pressure :"
                
                CEToolBoxTextInput:
                    id: Pressure
                
                SpinnerUnit:
                
                CEToolBoxLabel:        
                    text: "Time :"
                
                CEToolBoxTextInput:
                    id: Time
                
                SpinnerUnit:

                CEToolBoxLabel:
                    text: "Viscosity :"
            
                CEToolBoxTextInput:
                    id: Viscosity
                
                SpinnerUnit:
                
                CEToolBoxLabel:
                    text: "Concentration :"
            
                CEToolBoxTextInput:
                    id: Concentration
                    
                SpinnerUnit:

                CEToolBoxLabel:
                    text: "Molecular weight :"
                            
                CEToolBoxTextInput:
                    id: Molweight
                    
                SpinnerUnit:
    
        ScrollView:
            size_hint_y: 0.15
                        
            DownMenuLayout:  

                CalculateButton:
                    on_release: root.show_injection_results()
                    
                Button:
                    id: Resetbtn
                    text: "Reset"
                    on_press: Capillary.text="100.0"
                    on_press: Towindow.text="100.0"
                    on_press: Idiameter.text="50.0"
                    on_press: Pressure.text="30.0"
                    on_press: Time.text="10.0"
                    on_press: Viscosity.text="1.0"
                    on_press: Concentration.text="1.0"
                    on_press: Molweight.text="1 000.0"
                
                MenuButton:
                    on_press: root.manager.current = 'menu'



<ViscosityScreen>:
    fullscreen: True
    
    BoxLayout:
        orientation: 'vertical'
        
        ScrollViewTop:
            TopScreenLayout:

                Label:
                    text: "Capillary Length :"
                    id: ko
                    height: 0.5
                    size_hint_x: 0.5
                
                TextInput:        
                    height: 0.5
                    text: "100.0"
                    pos_hint: {'right': 0.5}
                    id: Capillary

                Label:
                    text: "Length to window :"
                    height: 0.5
                    size_hint_x: 0.5
                
                TextInput:
                    height: 0.5
                    text: "100.0"
                    pos_hint: {'right': 0.5}
                    id: Towindow
                
                Label:
                    text: "Inside diameter :"
                    height: 0.5
                    size_hint_x: 0.5
            
                TextInput:
                    height: 0.5
                    text: "50.0"
                    pos_hint: {'right': 0.5}
                    id: Idiameter
            
                Label:
                    text: "Pressure :"
                    height: 0.5
                    size_hint_x: 0.5
                
                TextInput:
                    height: 0.5
                    text: "30.0"
                    pos_hint: {'right': 0.5}
                    id: Pressure
                
                Label:        
                    text: "Time :"
                    height: 0.5
                    size_hint_x: 0.5
                
                TextInput:
                    height: 0.5
                    text: "10.0"
                    pos_hint: {'right': 0.5}
                    id: Time
        
        DownMenuLayout:  
            
            CalculateButton:
                on_release: root.show_viscosity_results()

            Button:
                id: Resetbtn
                text: "Reset"
                on_press: Capillary.text="100.0"
                on_press: Towindow.text="100.0"
                on_press: Idiameter.text="50.0"
                on_press: Pressure.text="30.0"
                on_press: Time.text="10.0"

            MenuButton:
                on_press: root.manager.current = 'menu'
            
          
